@page "/"
@using ROCStarBackend

<h3>Klas @group.Id</h3>

Studenten: @group.Students.Count
<br />

<table>
  <thead>
    <tr>
      <th @onclick="() => group.Sort(0)">Id</th>
      <th @onclick="() => group.Sort(1)">Naam</th>
      <th @onclick="() => group.Sort(2)">Geboortedatum</th>
    </tr>
  </thead>
  @foreach (var student in group.Students)
  {
    <tr>
      <td width="50" align="center">@student.Id</td>
      <td width="200">@student.Name</td>
      <td>
        @if (student.BirthDate != DateOnly.MinValue)
        {
          @student.BirthDate
        }
      </td>
    </tr>
  }
</table>

@code {
    Group group = SampleClass.OITSDO2C;
}
